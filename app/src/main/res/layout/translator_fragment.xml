<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar"
        android:elevation="2dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="70dp"
        android:id="@+id/editText"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/background_edit_text"
        android:padding="10dp"
        android:gravity="top"
        android:layout_height="150dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/translate"
        android:layout_width="wrap_content"
        android:id="@+id/translate_button"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_translate_button"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:textColor="@color/titleTextColor" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scrollbars="vertical"
        android:layout_below="@+id/translate_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="1dp">

        <Spinner
            android:id="@+id/from_spinner"
            android:layout_weight="0.45"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:background="@drawable/background_drop_down"
            android:layout_height="50dp" />
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/change_button"
            android:layout_weight="0.15"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:background="@drawable/background_change_language_button"
            android:layout_height="50dp"
            android:layout_marginTop="-1.5dp" />
        <Spinner
            android:id="@+id/to_spinner"
            android:layout_height="50dp"
            android:layout_weight="0.45"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:background="@drawable/background_drop_down" />
    </LinearLayout>

</RelativeLayout>